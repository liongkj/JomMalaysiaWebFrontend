@model JomMalaysia.Presentation.Models.AppUsers.AppUser
@{
    Layout = null;
}

<legend>@Model.Username</legend>

<div class="form-group row">
    <div class="col-sm-10 col-md-9">
        <img src="@Model.PictureUri" alt="@Model.Username" class="img-thumbnail">
    </div>
</div>
<div class="form-group row">
    <div class="col-sm-2 col-md-3 col-form-label">@Html.DisplayNameFor(m => m.Role)</div>
    <div class="col-sm-10 col-md-9">
        <input class="form-control" type="text" placeholder="@Model.Role" readonly="">
    </div>


</div>

<div class="form-group row">
    <div class="col-sm-2 col-md-3 col-form-label">@Html.DisplayNameFor(m => m.Email)</div>
    <div class="col-sm-10 col-md-9">
        <input class="form-control" type="text" placeholder="@Model.Email" readonly="">
    </div>

</div>

<div class="form-group row">
    <div class="col-sm-2 col-md-3 col-form-label">@Html.DisplayNameFor(m => m.Name)</div>
    <div class="col-sm-10 col-md-9">
        <input class="form-control" type="text" placeholder="@Model.Name" readonly="">
    </div>
</div>