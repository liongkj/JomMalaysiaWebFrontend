@model JomMalaysia.Presentation.Models.Listings.ListingDescription

<div class="form-group row">
    <div class="col-md-3">@Html.DisplayNameFor(m => m.En)</div>
    <div class="col-md-9">
        <textarea asp-for="En" class="form-control description_field" placeholder = "Describe / characteristics / facts of this place"></textarea>
        <span asp-validation-for="En" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-3">@Html.DisplayNameFor(m => m.Ms)</div>
    <div class="col-md-9">
        <textarea asp-for="Ms" class="form-control description_field" placeholder = "Terangkan / ciri-ciri / fakta-fakta tempat ini"></textarea>
        @Html.ValidationMessageFor(m => m.Ms)
    </div>
</div>
<div class="form-group row">
    <div class="col-md-3">@Html.DisplayNameFor(m => m.Zh)</div>
    <div class="col-md-9">
        <textarea asp-for="Zh" class="form-control description_field" placeholder = "这个地方的描述/特征/事实"></textarea>
        @Html.ValidationMessageFor(m => m.Zh)
    </div>
</div>