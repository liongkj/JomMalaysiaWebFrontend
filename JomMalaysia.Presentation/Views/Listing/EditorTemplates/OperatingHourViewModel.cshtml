@model JomMalaysia.Presentation.ViewModels.Listings.OperatingHourViewModel


<div class="form-group row">

    <div class="col-sm-10 col-md-3">
        <label class="label">@Model.Day</label>
    </div>
    <div class= "col-sm-2 col-md-2">
        <div class="custom-control custom-switch">
            <input type="checkbox" class="custom-control-input" data-onstyle="info" 
                   id="OpeningHours" data-toggle="toggle" checked="@Model.Enabled">
            <label class="custom-control-label checkbox-info" for="OpeningHours"></label>
        </div>
    </div>

    <div class="col-sm-12 col-md-6 row">
        <input type="time" asp-for="StartTime" class="col-md-4"/>
        <label class="label col-md-2"> - </label>
        <input  type="time" asp-for="CloseTime" class="col-md-4"/>
    </div>
</div>