@model JomMalaysia.Presentation.ViewModels.Listings.OperatingHourViewModel


<div class="form-group row @Model.Day">

    <div class="col-sm-10 col-md-3">
        <label class="label">@Model.Day</label>
    </div>
    <div class="col-sm-2 col-md-2">
        <div class="custom-control custom-switch">
            <input type="checkbox" class="custom-control-input OperatingCb"
                   id="@Model.Day-Cb" onclick="showHourField(this)" data-day="@Model.Day" checked="@Model.Enabled">
            <label class="custom-control-label" for="@Model.Day-Cb"></label>
        </div>
    </div>
   
        <div class="col-sm-12 col-md-6 row" id="hour-field-@Model.Day" style="display:none">
            <input type="time" asp-for="StartTime" class="col-md-4"/>
            <label class="label col-md-2"> - </label>
            <input type="time" asp-for="CloseTime" class="col-md-4"/>
        </div>
    
</div>