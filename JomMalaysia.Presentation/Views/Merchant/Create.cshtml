@model JomMalaysia.Presentation.ViewModels.Merchants.RegisterMerchantViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Register New Merchant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--HEADER-->

<div class="form-group col-md-12 no-padding d-none d-md-block">
    <button type="button" class="btn btn-success col-md-2" onclick="create()">Save</button>
    <button type="button" class="btn btn-danger col-md-2" onclick="window.history.go(-1); return false;">Cancel</button>
</div>
<!--Mobile Buttons-->
<div class="form-group col-md-12 no-padding d-sm-block d-md-none">
    <div class="btn-group col-sm-12 no-padding" role="group">
        <button type="button" class="btn btn-primary">Action</button>
        <div id="dropdown-action-button" class="dropdown-menu col-sm-12" aria-labelledby="btnGroupDrop1" x-placement="bottom-start" style="display:none; position: absolute; transform: translate3d(0px, 35px, 0px); top: 0px; left: 0px; will-change: transform;">
            <a class="dropdown-item" onclick="$('#btnSubmit').click()">Save</a>
            <a class="dropdown-item" onclick="window.history.go(-1); return false;">Cancel</a>
        </div>
        <div id="action-button" class="btn-group" role="group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
        </div>
    </div>
</div>
<!--END OF HEADER-->

<form asp-controller="Merchant" asp-action="Create" id="FormCreate" class="form-m-gap-top" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"/>
    <div class="form-group row">
        <div class="col-sm-2 col-md-3 col-form-label">@Html.DisplayNameFor(m => m.SsmId)</div>
        <div class="col-sm-10 col-md-6">
            <input type="number" asp-for="SsmId" class="form-control only-number-no-arrow" />
            <span asp-validation-for="SsmId" class="text-danger" />
        </div>

        <div class="col-sm-2 col-md-3 col-form-label">@Html.DisplayNameFor(m => m.OldSsmId)</div>
        <div class="col-sm-10 col-md-6">
            <input asp-for="OldSsmId" class="form-control" />
            <span asp-validation-for="OldSsmId" class="text-danger" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2 col-md-3 col-form-label">@Html.DisplayNameFor(m => m.CompanyRegistrationName)</div>
        <div class="col-sm-10 col-md-6">
            <input asp-for="CompanyRegistrationName" class="form-control" />
            <span asp-validation-for="CompanyRegistrationName" class="text-danger" />
        </div>
    </div>

    <div class="form-group row">
        
        <div class="col-sx-12 col-md-6">
            
            <!-- Text input-->
            <div class="form-group row">
                <label asp-for="Address.Add1" class="col-md-12 col-form-label" ></label>
                       
                <div class="col-sx-10 col-md-12">
                    <input type="text" asp-for="Address.Add1" placeholder="Address Line 1" class="form-control">
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group row">
                <label asp-for="Address.Add2" class="col-md-12 col-form-label"></label>
                <div class="col-sm-10 col-md-6">
                    <input type="text" asp-for="Address.Add2" placeholder="Address Line 2" class="form-control">
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group row">
                <label asp-for="Address.City" class="col-md-12 col-form-label"></label>
                <div class="col-sm-10 col-md-6">
                    <input type="text" asp-for="Address.City" placeholder="City" class="form-control">
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group row">
                <label asp-for="Address.State" class="col-md-6 col-form-label"></label>
                <div class="row">
                    <div class="col-sm-10 col-md-6">
                        <input type="text" asp-for="Address.State" placeholder="State" class="form-control">
                    </div>
                </div>

                <label asp-for="Address.PostalCode" class="col-md-6 col-form-label"></label>
                <div class="col-sm-10 col-md-6">
                    <input type="text" asp-for="Address.PostalCode"  placeholder="Post Code" class="form-control">
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group row">
                <label asp-for="Address.Country" class="col-md-12 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Address.Country" placeholder="Country" class="form-control">
                </div>
            </div>
        </div>
        <div class="col-sx-12 col-md-6">
            google maps
        </div>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script type="text/javascript">
    function create() {
        var data = $("#FormCreate").serialize();

        if ($("#FormCreate").valid()) {
            $.ajax({
                //TODO add [ValidateAntiForgeryToken]
                url: "/Merchant/Create/",
                data: data,
                type: "POST",
                success: function ({ item1, item2 }) {
                    if (item1 == 1) {
                        sweetAlert(
                            {
                                title: "Merchant Registered",
                                text: "The merchant is registered successfully.",
                                type: "success"
                            },
                            function () {
                                window.location.href = "/merchant";
                            }
                        );
                    } else {
                        swal(
                            "Oops",
                            item2,
                            "error"
                        );
                    }
                },
                error: function (xhr, err) {
                    debugger
                    swal(
                        "Oops",
                        "An unknown error occured! Please contact technical support.",
                        "error"
                    );
                }
            });
        }
    }

</script>
}
