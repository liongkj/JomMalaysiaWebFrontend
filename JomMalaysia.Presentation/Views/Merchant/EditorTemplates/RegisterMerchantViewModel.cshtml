@model JomMalaysia.Presentation.ViewModels.Merchants.RegisterMerchantViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="form-group row">
    <div class="col-sm-2 col-md-3 col-form-label">@Html.DisplayNameFor(m => m.SsmId)</div>
    <div class="col-sm-10 col-md-2">
        <input type="number" asp-for="SsmId" class="form-control only-number-no-arrow"/>
        <span asp-validation-for="SsmId" class="text-danger"></span>
    </div>

    <div class="col-sm-2 col-md-2 col-form-label">@Html.DisplayNameFor(m => m.OldSsmId)</div>
    <div class="col-sm-10 col-md-2">
        <input asp-for="OldSsmId" class="form-control"/>
        <span asp-validation-for="OldSsmId" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2 col-md-3 col-form-label">@Html.DisplayNameFor(m => m.CompanyRegistrationName)</div>
    <div class="col-sm-10 col-md-6">
        <input asp-for="CompanyRegistrationName" class="form-control"/>
        <span asp-validation-for="CompanyRegistrationName" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-md-3">@Html.DisplayNameFor(m => m.Address.Add1)</div>
    <div class="col-md-6">
        @Html.TextBoxFor(m => m.Address.Add1, new {@class = "form-control add_field", placeholder = "Address Line 1"})
        @Html.ValidationMessageFor(m => m.Address.Add1)
    </div>
</div>
<div class="form-group row">
    <div class="col-md-3">@Html.DisplayNameFor(m => m.Address.Add2)</div>
    <div class="col-md-6">
        @Html.TextBoxFor(m => m.Address.Add2, new {@class = "form-control add_field", placeholder = "Address Line 2"})
        @Html.ValidationMessageFor(m => m.Address.Add2)
    </div>
</div>
<div class="form-group row">
    <div class="col-md-3">@Html.DisplayNameFor(m => m.Address.City)</div>
    <div class="col-md-3">
        @Html.TextBoxFor(m => m.Address.City, new {@class = "form-control add_field", placeholder = "City"})
        @Html.ValidationMessageFor(m => m.Address.City)
    </div>
    <div class="col-md-3">
        @Html.TextBoxFor(m => m.Address.PostalCode, new {@class = "form-control add_field", placeholder = "Postal Code"})
        @Html.ValidationMessageFor(m => m.Address.PostalCode)
    </div>
</div>
<div class="form-group row">
    <div class="col-md-3">@Html.DisplayNameFor(m => m.Address.State)</div>
    <div class="col-md-3">
        <select asp-for="Address.State" asp-items="Model.Address.StateList.Item1" class="form-control add_field"></select>
        <span asp-validation-for="Address.State" class="text-danger"></span>

    </div>
    <div class="col-md-3">
        <select asp-for="Address.Country" asp-items="Model.Address.CountryList" class="form-control add_field"></select>
        <span asp-validation-for="Address.Country" class="text-danger"></span>
    </div>
</div>
<h5>
    @Html.DisplayNameFor(m => m.Contacts)
</h5>
<div class="form-group row">
    <div class="col-md-3">@Html.DisplayNameFor(m => m.Contacts[0].Name)</div>
    <div class="col-sm-10 col-md-6">
        <input asp-for="Contacts[0].Name" class="form-control"/>
        <span asp-validation-for="Contacts[0].Name" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-3">@Html.DisplayNameFor(m => m.Contacts[0].Email)</div>
    <div class="col-sm-10 col-md-6">
        <input asp-for="Contacts[0].Email" class="form-control"/>
        <span asp-validation-for="Contacts[0].Email" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-3">@Html.DisplayNameFor(m => m.Contacts[0].Phone)</div>
    <div class="col-sm-10 col-md-6">
        <input asp-for="Contacts[0].Phone" class="form-control"/>
        <span asp-validation-for="Contacts[0].Phone" class="text-danger"></span>
    </div>
</div>