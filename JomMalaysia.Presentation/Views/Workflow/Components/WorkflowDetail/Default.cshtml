@model JomMalaysia.Presentation.Models.Workflows.WorkflowModel
@{
    Layout = null;
}

<legend>Workflow</legend>
<div class="form-group row">
    <div class="col-sm-2 col-md-3 col-form-label">@Html.DisplayNameFor(m => m.Type)</div>
    <div class="col-sm-10 col-md-3">
        <input asp-for="Type" readonly class="form-control-plaintext" />
    </div>

    <div class="col-sm-10 col-md-5">
        <input asp-for="Status" readonly class="form-control-plaintext" />
    </div>
</div>
<legend>Listing</legend>
<div class="form-group row">
    <div class="col-sm-2 col-md-3 col-form-label">@Html.DisplayNameFor(m => m.Listing.ListingName)</div>
    <div class="col-sm-10 col-md-6">
        <input asp-for="Listing.ListingName" readonly class="form-control-plaintext" />
    </div>
    <div class="col-sm-10 col-md-3">
        <input asp-for="Listing.ListingType" readonly class="form-control-plaintext" />
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-2 col-md-3 col-form-label">@Html.DisplayNameFor(m => m.Listing.Merchant.SsmId)</div>
    <div class="col-sm-10 col-md-3">
        <input asp-for="Listing.Merchant.SsmId" readonly class="form-control-plaintext" />
    </div>

    <div class="col-sm-10 col-md-5">
        <input asp-for="Listing.Merchant.RegistrationName" readonly class="form-control-plaintext" />
    </div>
</div>
@if (@Model.HistoryData.Count > 0)
{
    <legend>Additional Details</legend>
    <div class="form-group row">
        <div class="col-sm-2 col-md-3 col-form-label">Previous Workflows</div>
        <!-- timeline item 1 -->
        <div class="row">
            <!-- timeline item 1 left dot -->
            <div class="col-auto text-center flex-column d-none d-sm-flex">
                <div class="row h-50">
                    <div class="col">&nbsp;</div>
                    <div class="col">&nbsp;</div>
                </div>
                <h5 class="m-2">
                    <span class="badge badge-pill bg-light border">&nbsp;</span>
                </h5>
                <div class="row h-50">
                    <div class="col border-right">&nbsp;</div>
                    <div class="col">&nbsp;</div>
                </div>
            </div>
            <!-- timeline item 1 event content -->
            <div class="col py-2">
                <div class="card">
                    <div class="card-body">
                        <div class="float-right text-muted">Mon, Jan 9th 2019 7:00 AM</div>
                        <h4 class="card-title text-muted">Day 1 Orientation</h4>
                        <p class="card-text">Welcome to the campus, introduction and get started with the tour.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

}



