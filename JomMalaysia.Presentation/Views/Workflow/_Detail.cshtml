@model JomMalaysia.Presentation.ViewModels.Workflows.WorkflowAction
@addTagHelper *, JomMalaysia.Presentation


<form asp-controller="Workflow" asp-action="Respond" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <vc:workflow-detail id="@Model.WorkflowId"></vc:workflow-detail>

    <legend>Respond</legend>
    <div class="form-group row">
        <div class="col-sm-2 col-md-3 col-form-label">@Html.DisplayNameFor(m => m.Comments)</div>
        <div class="col-sm-10 col-md-3">
            <textarea asp-for="Comments" class="form-control"></textarea>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-danger">Reject</button>
        <button type="button" class="btn btn-primary">Approve</button>
    </div>
</form>